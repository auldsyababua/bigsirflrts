{
  "name": "bigsirflrts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "FLRTS project with NLP service",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test:mvp": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "vitest run tests/unit --reporter=dot -t @P0",
    "test:integration": "vitest run tests/integration --reporter=dot -t @P0",
    "test:e2e": "playwright test tests/e2e --grep @P0",
    "test:smoke": "bash tests/mvp-smoke-test.sh",
    "test:api": "node tests/run-tests.js --api",
    "test:api:watch": "node tests/run-tests.js --api --watch",
    "test:secure": "node tests/run-tests.js",
    "test:secure:watch": "node tests/run-tests.js --watch",
    "test:integration:webhook": "node tests/run-integration-tests.js --suite=edge-function-n8n-webhook",
    "test:performance": "node tests/run-integration-tests.js --suite=performance-regression",
    "test:integration:all": "node tests/run-integration-tests.js",
    "test:resilience": "vitest run tests/integration/n8n-operational-resilience.test.ts",
    "test:resilience:shell": "bash infrastructure/scripts/run-resilience-tests.sh",
    "lint": "npm run lint:js && npm run lint:md && npm run lint:shell",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore docs/archive --config .markdownlint.json --ignore-path .markdownlintignore",
    "lint:shell": "shellcheck **/*.sh || true",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:md -- --fix",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md,yml,yaml}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,md,yml,yaml}'",
    "nlp:dev": "npm run dev --workspace=nlp-service",
    "nlp:build": "npm run build --workspace=nlp-service",
    "nlp:start": "npm run start --workspace=nlp-service",
    "nlp:test": "npm run test --workspace=nlp-service",
    "qa:gate": "bash scripts/bmad-qa-gate.sh",
    "test:ci-local": "bash scripts/test-like-github.sh",
    "test:ci-validate": "bash scripts/validate-test-env.sh",
    "test:ci-debug": "CI=true NODE_ENV=test npm run test:mvp -- --reporter=verbose",
    "prepare": "husky"
  },
  "devDependencies": {
    "@opentelemetry/resources": "^2.1.0",
    "@playwright/test": "^1.46.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "axios": "^1.6.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.2.1",
    "markdownlint-cli": "^0.39.0",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "playwright": "^1.46.0",
    "prettier": "^3.2.5",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix --config .markdownlint.json --ignore-path .markdownlintignore"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@linear/sdk": "^60.0.0",
    "dotenv": "^17.2.2",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3"
  }
}
